---
# IMPORTANT: This is a template file. DO NOT commit actual secrets to git!
# Copy this file to secret.yaml and fill in your credentials.
# secret.yaml is in .gitignore to prevent accidental commits.
#
# To create the secret:
#   1. Copy: cp k8s/secret.yaml.example k8s/secret.yaml
#   2. Edit k8s/secret.yaml with your actual credentials
#   3. Apply: kubectl apply -f k8s/secret.yaml
#
# Or use kubectl create secret directly:
#   kubectl create secret docker-registry registry-credentials \
#     --docker-server=registry.kolosowscy.pl \
#     --docker-username=YOUR_USERNAME \
#     --docker-password=YOUR_PASSWORD \
#     --docker-email=YOUR_EMAIL \
#     -n krunner-yubikey-ci

apiVersion: v1
kind: Secret
metadata:
  name: registry-credentials
  namespace: krunner-yubikey-ci
  labels:
    app.kubernetes.io/name: krunner-yubikey-oath
    app.kubernetes.io/component: registry
type: kubernetes.io/dockerconfigjson
data:
  # Base64 encoded Docker config JSON
  # Generate with: echo '{"auths":{"registry.kolosowscy.pl":{"username":"USER","password":"PASS","email":"EMAIL","auth":"BASE64(USER:PASS)"}}}' | base64 -w0
  .dockerconfigjson: REPLACE_WITH_BASE64_ENCODED_DOCKER_CONFIG_JSON

---
apiVersion: v1
kind: Secret
metadata:
  name: github-token
  namespace: krunner-yubikey-ci
  labels:
    app.kubernetes.io/name: krunner-yubikey-oath
    app.kubernetes.io/component: deploy
type: Opaque
data:
  # Base64 encoded GitHub Personal Access Token (with repo scope)
  # Generate with: echo -n 'ghp_YOUR_TOKEN_HERE' | base64 -w0
  token: REPLACE_WITH_BASE64_ENCODED_GITHUB_TOKEN

---
apiVersion: v1
kind: Secret
metadata:
  name: aur-ssh-key
  namespace: krunner-yubikey-ci
  labels:
    app.kubernetes.io/name: krunner-yubikey-oath
    app.kubernetes.io/component: deploy
type: Opaque
data:
  # Base64 encoded SSH private key for AUR
  # Generate with: cat ~/.ssh/aur_rsa | base64 -w0
  ssh-privatekey: REPLACE_WITH_BASE64_ENCODED_SSH_PRIVATE_KEY

  # Base64 encoded SSH public key for AUR
  # Generate with: cat ~/.ssh/aur_rsa.pub | base64 -w0
  ssh-publickey: REPLACE_WITH_BASE64_ENCODED_SSH_PUBLIC_KEY

stringData:
  # Git configuration for AUR commits (plain text, will be auto-encoded)
  git-email: "ci@kolosowscy.pl"
  git-name: "GitLab CI"
